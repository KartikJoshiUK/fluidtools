{
  "compilerOptions": {
    /* Language and Environment */
    "target": "esnext",
    "lib": ["ES2023"],

    /* Modules */
    "module": "nodenext",
    "moduleResolution": "nodenext",

    /* Emit - Disabled since tsup handles compilation */
    "noEmit": true,

    /* Interop Constraints */
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "**/__mocks__/**"
  ]
}
